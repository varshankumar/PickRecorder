FROM vm/ubuntu:18.04

# Install Python and pip
RUN apt-get update && apt-get install -y python3 python3-pip

# Upgrade pip to latest version
RUN pip3 install --upgrade pip

# Install required Python packages
RUN pip3 install flask pymongo python-dotenv pytz flask-login
RUN pip3 install google-generativeai==0.3.1

# Copy repository contents to /root
COPY . .

# Set up environment variables
SECRET ENV MONGO_URI
SECRET ENV ODDS_API_KEY
SECRET ENV GEMINI_KEY
SECRET ENV SECRET_KEY

# Start the Flask application
RUN BACKGROUND python3 app.py
EXPOSE WEBSITE http://localhost:5000